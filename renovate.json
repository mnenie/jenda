{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)"
  ],
  "baseBranches": [
    "master"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "matchPackageNames": [
        "@vueuse/*",
        "vue-i18n",
        "vite-plugin-vue-devtools",
        "unplugin-vue-router",
        "@vue/test-utils",
        "@unhead/vue",
        "unocss",
        "@unocss/*",
        "vee-validate",
        "@vee-validate/*",
        "floating-vue",
        "radix-vue"
      ],
      "enabled": true
    },
    {
      "matchFileNames": [
        "core/client/**"
      ],
      "labels": [
        "frontend",
        "dependencies"
      ]
    }
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "rangeStrategy": "bump",
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/public/**"
  ],
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(dependencies): ",
  "minimumReleaseAge": "3 days",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  }
}
