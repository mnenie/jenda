{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "baseBranches": [
    "master"
  ],
  "packageRules": [
    {
      "groupName": "unocss",
      "matchPackageNames": [
        "unocss",
        "@unocss/*"
      ]
    },
    {
      "groupName": "vee-validate",
      "matchPackageNames": [
        "vee-validate",
        "@vee-validate/*"
      ]
    },
    {
      "groupName": "ui",
      "matchPackageNames": [
        "floating-vue",
        "radix-vue"
      ]
    },
    {
      "groupName": "vue-related",
      "matchPackageNames": [
        "vue-i18n",
        "vite-plugin-vue-devtools",
        "unplugin-vue-router",
        "@vue/test-utils",
        "@unhead/vue"
      ]
    },
    {
      "groupName": "vueuse",
      "matchPackageNames": [
        "@vueuse/*"
      ]
    },
    {
      "matchFileNames": [
        "core/client/**"
      ],
      "labels": [
        "frontend",
        "dependencies"
      ]
    }
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "rangeStrategy": "bump",
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/public/**"
  ],
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(dependencies): ",
  "minimumReleaseAge": "3 days",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  }
}
